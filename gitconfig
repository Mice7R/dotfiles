[user]
	name = Mice7R
	email = mice7r@gmail.com
[push]
	default = simple
[alias]
	co = checkout
	ci = commit
	st = status -sb
	iquit = reset HEAD --hard
	lg = log --color --graph --pretty=format:'%h %Cred%ad%Creset %G?%C(yellow)%d%Creset %s %Cgreen(%cr)%C(bold blue)<%an>%Creset' --abbrev-commit --date=short
	ignore = "!f() { echo http://www.gitignore.io/api/$@ | sed 's/ /,/g' | wget -i- -O-;}; f >> .gitignore"
	squash = merge --squash --commit --edit
[core]
	editor = vim
	autocrlf = input
[color]
	ui = auto
[merge]
	tool = vimdiff
	conflictstyle = diff3
[mergetool]
	keepBackup = false
	prompt = false
[init]
	defaultBranch = master
